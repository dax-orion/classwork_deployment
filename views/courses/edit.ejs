<div class="form-data">
    <form action="<%= `/courses/${course._id}/update?_method=PUT` %>" method="POST">
        <div class="form-group">
            <label for="txtName">Title</label>
            <input type="text" name="title" class="form-control" id="txtTitle" autofocus required value="<%= course.title %>">
        </div>
        <div class="form-group">
            <label for="txtDescription">Description</label>
            <input type="text" name="description" class="form-control" id="txtDescription" required value="<%= course.title %>">
        </div>
        <div class="form-group">
            <label for="txtMaxStudents">Max Students</label>
            <input type="text" name="maxStudents" class="form-control" id="txtMaxStudents" required value="<%= course.maxStudents %>">
        </div>
        <div class="form-group">
            <label for="txtCost">Cost</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">$</div>
                </div>
                <input type="text" name="cost" class="form-control" id="txtCost" required value="<%= course.cost %>">
                </div>
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
    </form>
</div>
