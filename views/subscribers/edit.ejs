<div class="form-data">
    <form action="<%= `/subscribers/${subscriber._id}/update?_method=PUT` %>" method="POST">
        <div class="form-group">
            <label for="txtName">Name</label>
            <input type="text" name="name" class="form-control" id="txtName" autofocus required value="<%= subscriber.name %>">
        </div>
        <div class="form-group">
            <label for="txtEmail">Email Address</label>
            <input type="text" name="email" class="form-control" id="txtEmail" required value="<%= subscriber.email %>">
        </div>
        <div class="form-group">
            <label for="txtZipCode">Zip Code</label>
            <input type="text" name="zipCode" class="form-control" id="txtZipCode" required value="<%= subscriber.zipCode %>">
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
    </form>
</div>
