<div class="form-data">
    <form action="/subscribers/create" method="POST">
        <div class="form-group">
            <label for="txtName">Name</label>
            <input type="text" class="form-control" name="name" id="txtName" autofocus required>
        </div>
        <div class="form-group">
            <label for="txtEmail">Email Address</label>
            <input type="text" class="form-control" name="email" id="txtEmail" required>
        </div>
        <div class="form-group">
            <label for="txtZipCode">Zip Code</label>
            <input type="text" name="zipCode" class="form-control" id="txtZipCode" required>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
