<div class="form-data">
    <form action="<%= `/users/${user._id}/update?_method=PUT` %>" method="POST">
        <div class="form-group">
            <label for="txtFirstName">First Name</label>
            <input type="text" name="first" class="form-control" id="txtFirstName" autofocus required value="<%= user.name.first %>">
        </div>
        <div class="form-group">
            <label for="txtLastName">Last Name</label>
            <input type="text" name="last" class="form-control" id="txtLastName" autofocus required value="<%= user.name.last %>">
        </div>
        <div class="form-group">
            <label for="txtEmail">Email Address</label>
            <input type="text" name="email" class="form-control" id="txtEmail" required value="<%= user.email %>">
        </div>
        <div class="form-group">
            <label for="txtPassword">New Password</label>
            <input type="password" class="form-control" name="password" id="txtPassword" required>
        </div>
        <div class="form-group">
            <label for="txtZipCode">Zip Code</label>
            <input type="text" name="zipCode" class="form-control" id="txtZipCode" required value="<%= user.zipCode %>">
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
    </form>
</div>
